<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
  <style>
    body { font-family: Arial, sans-serif; background: #e4ffe6; margin: 0; }
    .sidebar {
      float: left;
      width: 20%;
      background: #c0f5d9;
      height: 100vh;
      padding: 20px;
      box-sizing: border-box;
    }
    .sidebar a {
      display: block;
      margin-bottom: 14px;
      color: #222;
      text-decoration: none;
      font-size: 18px;
    }
    .main-content {
      margin-left: 22%;
      padding: 30px 40px;
    }
    .header {
      font-size: 36px;
      font-weight: bold;
      text-align: left;
      color: #208068;
      margin-bottom: 24px;
    }
    table {
      width: 100%;
      background: #bbecfc;
      border-radius: 10px;
      border-collapse: collapse;
    }
    th, td {
      padding: 18px 10px;
      text-align: left;
      border-bottom: 1px solid #c0f5d9;
    }
    th {
      color: #208068;
      font-size: 18px;
      background: #bbecfc;
    }
    td img {
      width: 50px;
      height: 50px;
      border-radius: 7px;
      background: #e4ffe6;
      object-fit: cover;
    }
    .buy-now-btn {
      background: #208068;
      color: white;
      border: none;
      border-radius: 6px;
      padding: 9px 16px;
      font-size: 15px;
      cursor: pointer;
      transition: background 0.2s;
    }
    .buy-now-btn:hover {
      background: #145042;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <a href="/home">Home</a>
    <a href="/settings">Settings</a>
    <a href="/listings">Listing</a>
    <a href="/cart">Cart</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/auth/logout">Logout</a>
  </div>
  <div class="main-content">
    <div class="header">CART</div>
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Product</th>
          <th>Buy Now</th>
        </tr>
      </thead>
      <tbody>
        <% cartItems.forEach(function(item) { %>
        <tr>
          <td>
            <% if(item.img) { %>
              <img src="<%= item.img %>" alt="Product Image" />
            <% } else { %>
              <div style="width:50px;height:50px;background:#e4ffe6;border-radius:7px;"></div>
            <% } %>
          </td>
          <td><%= item.name %></td>
         <td>
  <form method="get" action="/product/<%= item.id || 1 %>">
    <button type="submit" class="buy-now-btn">Buy Now</button>
  </form>
</td>

        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
