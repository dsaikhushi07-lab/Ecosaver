<!DOCTYPE html>
<html>
<head>
  <title>Listings</title>
  <style>
    body { font-family: Arial, sans-serif; background: #e4ffe6; margin: 0; }
    .sidebar {
      float: left;
      width: 20%;
      background: #c0f5d9;
      height: 100vh;
      padding: 20px;
      box-sizing: border-box;
    }
    .sidebar a {
      display: block;
      margin-bottom: 14px;
      color: #222;
      text-decoration: none;
      font-size: 18px;
    }
    .main-content {
      margin-left: 22%;
      padding: 30px 40px;
    }
    .header {
      font-size: 36px;
      font-weight: bold;
      text-align: left;
      color: #208068;
      margin-bottom: 24px;
    }
    .products {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
    .product-card {
      background: #bbecfc;
      border-radius: 10px;
      padding: 18px 12px;
      text-align: center;
      min-height: 120px;
    }
    .product-img {
      background: #e4ffe6;
      border-radius: 7px;
      height: 80px;
      margin-bottom: 10px;
    }
    .product-title {
      font-weight: bold;
      font-size: 18px;
      margin-bottom: 7px;
      color: #208068;
    }
    .product-desc {
      font-size: 14px;
      color: #23745c;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <a href="/home">Home</a>
    <a href="/settings">Settings</a>
    <a href="/listings">Listing</a>
    <a href="/cart">Cart</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/auth/logout">Logout</a>
  </div>
  <div class="main-content">
    <div class="header">LISTINGS</div>
    <div class="products">
      <% products.forEach(function(product){ %>
        <div class="product-card">
          <div class="product-img"></div>
          <div class="product-title"><%= product.title %></div>
          <div class="product-desc"><%= product.desc %></div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
